{
  "name": "ollama-pdf-rag-chat",
  "description": "RAG application that utilizes local ollama service to be able to chat over uploaded documents",
  "author": "Nicholas Nguyen <NicholasNguyen8742@gmail.com> (https://github.com/Nicholas-Nguyen8742/)",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm run --stream -r build",
    "build:server": "pnpm --filter ./packages/server run build",
    "build:web": "pnpm --filter ./packages/web run build",
    "start:server": "pnpm --filter ./packages/server run watch",
    "start:web": "pnpm --filter ./packages/web run dev"
  },
  "engines": {
    "node": "20.9.0"
  },
  "packageManager": "pnpm@8.15.6",
  "keywords": [
    "nvm",
    "pnpm",
    "typescript",
    "koa",
    "react",
    "material-ui",
    "retrieval-augmented-generation",
    "rag",
    "langchain",
    "ollama",
    "mistral"
  ]
}
